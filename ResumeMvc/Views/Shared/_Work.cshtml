@model IEnumerable<ResumeMvc.Models.Work>
@{var Work = Model;}

@if (Work != null && Work.Any())
{
    <section id="work">
        <h2 class="underlined">Work</h2>
        @foreach (var item in Work)
        {
            <div class="item">
                @if (!string.IsNullOrWhiteSpace(item.Company))
                {
                    <section id="@item.Company">
                        <h3 class="work_name">
                            @item.Company
                            <div class="work_date">
                                @if (item.StartDate.HasValue)
                                {

                                    <span class="startDate">
                                        @item.StartDate.Value.ToString("Y") -
                                    </span>
                                }
                                @if (item.EndDate.HasValue)
                                {
                                    <span class="endDate">
                                        @item.EndDate.Value.ToString("Y")
                                    </span>
                                }
                                else
                                {
                                    <span class="endDate">
                                        Present
                                    </span>
                                }
                            </div>
                        </h3>
                    </section>
                }
                @if (!string.IsNullOrWhiteSpace(item.Website))
                {
                    <div class="work_website">
                        <a href="@item.Website">@item.Website</a>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(item.Position))
                {
                    <div class="work_position">
                        @item.Position
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(item.Summary))
                {
                    <div class="summary">
                        <p>@item.Summary</p>
                    </div>
                }
                @if (item.Highlights != null)
                {@Html.Partial("_Highlights", item.Highlights);
                }
            </div>
        }
    </section>
}